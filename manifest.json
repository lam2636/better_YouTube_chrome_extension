{
    "name": "Better YouTube",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js",
                "popup.js"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_title": "Better YouTube"
    },
    "web_accessible_resources": [
        "*.jpg",
        "*.JPG"
    ],
    "permissions": [
        "storage",
        "tabs"
    ]
}